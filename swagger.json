{
  "swagger": "2.0",
  "info": {
    "version": "0.1.0",
    "title": "Process Engine HTTP REST API",
    "description": "",
    "termsOfService": "terms"
  },
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "tags": [{
    "name": "iam",
    "description": "Endpoints to authenticate and manage rights"
  }, {
    "name": "process engine",
    "description": "Endpoints to execute and manage of processes"
  }, {
    "name": "messagebus",
    "description": "Endpoints to put messages on the messagebus"
  }],
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "after logging in via `/iam/login` provide the resulting bearer-token as Authorization-header in the form of `'Bearer ' + bearer_token`"
    }
  },
  "definitions": {
    "UserCredentials": {
      "description": "user credentials",
      "properties": {
        "username": {
          "type": "string",
          "description": "the user name"
        },
        "password": {
          "type": "string",
          "description": "the users password"
        }
      }
    },
    "MessagebusPublication": {
      "description": "a message that can be published on the messagebus",
      "properties": {
        "channel": {
          "type": "string",
          "description": "the channel the message will be published on"
        },
        "msg": {
          "description": "the content of your message",
          "type": "object"
        },
        "options": {
          "description": "additional query options for your message publication",
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "applicationId": {
              "type": "string"
            },
            "token": {
              "type": "string"
            }
          }
        }
      }
    },
    "StartProcessMessage": {
      "description": "An object describing the process to start and its initial state",
      "properties": {
        "msg": {
          "description": "An object with the necessary information to identify the process that should be started",
          "properties": {
            "key": {
              "type": "string"
            }
          }
        },
        "options": {
          "type": "object",
          "description": "additional query options for the process you want to start, like the token that acs as input-data for the process",
          "properties": {
            "id": {
              "type": "string"
            },
            "applicationId": {
              "type": "string"
            },
            "token": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "paths": {
    "/processengine/start": {
      "post": {
        "tags": ["process engine"],
        "summary": "Start the execution of a process",
        "description": "This orders the process engine to start executing a process",
        "parameters": [
          {
            "name": "start message",
            "description": "The message describing the process to start and its initial state",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/StartProcessMessage"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "ID of the newly started process instance",
            "schema": {
              "type": "string"
            }
          }
        }
      }
    },
    "/messagebus/publish": {
      "post": {
        "tags": ["messagebus"],
        "summary": "Publish a message on the messagebus",
        "description": "This makes the process engine send the given message to the given channel on its messagebus.",
        "parameters": [
          {
            "name": "user credentials",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/MessagebusPublication"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "string"
            }
          }
        }
      }
    },
    "/iam/login": {
      "post": {
        "tags": [
          "iam"
        ],
        "summary": "Authenticates and returns a token",
        "description": "",
        "parameters": [
          {
            "name": "user credentials",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/UserCredentials"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "string"
            }
          }
        }
      }
    },
    "/iam/logout": {
      "get": {
        "tags": [
          "iam"
        ],
        "summary": "Logs the user out",
        "description": "",
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "string"
            }
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    },
    "/getidentity": {
      "get": {
        "tags": [
          "iam"
        ],
        "summary": "Returns the user identity",
        "description": "",
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "string"
            }
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    },
    "/getidentityentity": {
      "get": {
        "tags": [
          "iam"
        ],
        "summary": "Returns the entity for the user identity",
        "description": "",
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "string"
            }
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    },
    "/validatecredentials": {
      "post": {
        "tags": [
          "iam"
        ],
        "summary": "Validates user credentials",
        "description": "",
        "operationId": "",
        "parameters": [
          {
            "name": "user credentials",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/UserCredentials"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "string"
            }
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    }
  }
}
